<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    User List
                    <a href="/user/new" class="btn btn-xs pull-right"> <i class="glyphicon glyphicon-plus-sign"></i> New User</a>
                </h3>
            </div>
            <div class="panel-body">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="text-center">ID</th>
                        <th class="text-center">User Online</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Email</th>
                        <th class="text-center">Is Admin</th>
                        <th colspan="3" class="text-center">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% _.each(users, function(user) { %>
                    <tr data-id="<%= user.id %>" data-model="user">
                        <td class="text-center"><%= user.id %></td>
                        <td class="text-center">
                            <i class="glyphicon glyphicon-<%= user.isOnline ? 'log-in' : 'log-out' %>"
                               title="<%= user.isOnline ? 'Logged In' : 'Logged Out' %>"></i>
                        </td>
                        <td><%= user.name %></td>
                        <td><%= user.title %></td>
                        <td><%= user.email %></td>
                        <td class="text-center">
                            <i class="glyphicon glyphicon-<%= user.isAdmin ? 'tower' : 'user' %>"
                               title="<%= user.isAdmin ? 'Admin' : 'User' %>"></i>
                        </td>
                        <td><a href="/user/show/<%= user.id %>" class="btn btn-info"> <i class="glyphicon glyphicon-eye-open"></i> Show</a></td>
                        <td><a href="/user/edit/<%= user.id %>" class="btn btn-success"> <i class="glyphicon glyphicon-edit"></i> Edit</a></td>
                        <td>
                            <form action="/user/destroy/<%= user.id %>">
                                <button class="btn btn-danger" type="submit"> <i class="glyphicon glyphicon-remove-circle"></i> Delete</button>
                                <input type="hidden" name="_method" value="delete" />
                                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                            </form>
                         </td>
                    </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
