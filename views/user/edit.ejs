<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="jumbotron">
            <form class="form-horizontal" method="post" action="/user/update/<%= user.id %>">
                <fieldset>
                    <legend>User Update Form</legend>
                    <% if (flash && flash.err) { %>
                        <ul class="alert alert-success">
                        <% Object.keys(flash.err).forEach(function(error) { %>
                            <li><%= JSON.stringify(flash.err[error]) %></li>
                        <% }); %>
                        </ul>
                    <% } %>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Name</label>
                        <div class="col-lg-10">
                            <input type="text" name="name" value="<%= user.name %>" placeholder="Full Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Title</label>
                        <div class="col-lg-10">
                            <input type="text" name="title" value="<%= user.title %>" placeholder="Title" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="email" name="email" value="<%= user.email %>" placeholder="Email" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button class="btn btn-success" type="submit">Submit</button>
                            <a class="btn btn-info" href="/">Cancel</a>
                            <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
